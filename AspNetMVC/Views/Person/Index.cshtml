@model IEnumerable<AspNetMVC.Models.Person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="d-flex mb-3">
        <div class="p-2">
            <blockquote class="blockquote float-left">
                <p>Person</p>
            </blockquote>
        </div>
        <div class="ms-auto p-2">
            @Html.ActionLink("Add New", "Edit", "Person", new { id = "test" }, new { @class = "btn btn-success" })
        </div>
    </div>
</div>

<table id="PersonTable" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Person Type</th>
            <th>Title</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PersonType)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(model => item.FirstName)</td>
                <td>@Html.DisplayFor(model => item.MiddleName)</td>
                <td>@Html.DisplayFor(model => item.LastName)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Person", new { businessEntityID = item.BusinessEntityID }, new { @class = "btn btn-outline-warning btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", "Person", new { businessEntityID = item.BusinessEntityID }, new { @class = "btn btn-outline-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css" />

@section scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#PersonTable').DataTable();
        });
    </script>

}
